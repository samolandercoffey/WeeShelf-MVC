<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= book.title %></h2>
      <img class="img-fluid" src="<%= book.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/book/likeBook/<%= book.id %>?_method=PUT"
          method="POST"
        >
        <button class="btn btn-primary fa fa-heart" type="submit"></button>
      </form> 
      <form 
        class="col-1"
        action="/book/favoriteBook/<%= book.id %>" method="POST"
      >
          <button class="btn btn-primary fa fa-star" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= book.likes %></h3>
        <%if(book.user == user.id){ %>
        <form
          action="/book/deleteBook/<%= book.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= book.author %></p>
    </div>
    <div class="col-3 mt-5">
      <p><%= book.genre %></p>
    </div>
    <div class="col-3 mt-5">
      <p><%= book.summary %></p>
    </div>

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
      <a class="btn btn-primary" href="/favorites">See my favourites</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
